<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurahDetails">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surah Details"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="401dp"
        android:layout_height="622dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Surah Number :"
            android:textColor="#58A199"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/surahID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Surah ID" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Surah Name :"
            android:textColor="#58A199"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/surahNameEng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/surahNameUrdu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Surah Intro :"
            android:textColor="#58A199"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/surahIntro"
            android:layout_width="387dp"
            android:layout_height="279dp"
            android:layout_marginRight="40dp"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingEnd="40dp"
            android:paddingBottom="10dp"
            android:text="TextView" />

        <Button
            android:id="@+id/readSurah"
            android:layout_width="197dp"
            android:layout_height="58dp"
            android:text="Read Surah" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>